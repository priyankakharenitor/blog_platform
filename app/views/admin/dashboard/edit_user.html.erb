<h1>Edit User</h1>

<%= form_for @user, url: admin_update_user_path(@user), method: :patch do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Errors:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.submit "Update User" %>
  </div>
<% end %>

<%= link_to 'Back to Dashboard', admin_dashboard_path %>
