<h1>Analytics</h1>

<h2>Most Viewed Posts</h2>
<ul>
  <% @most_viewed_posts.each do |post| %>
    <li><%= post.title %> - <%= post.views_count %> views</li>
  <% end %>
</ul>

<h2>Average Reading Time</h2>
<p><%= @average_reading_time %> minute(s)</p>

<h2>Top Performing Tags</h2>
<ul>
  <% @popular_tags.each do |tag| %>
    <li><%= tag.name %> - <%= tag.posts.count %> posts</li>
  <% end %>
</ul>

<h2>Manage Users</h2>
<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.email %>
      <%= link_to 'Edit', admin_edit_user_path(user) %> |
            <%= link_to 'Delete', admin_destroy_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
      <%= user.admin? ? 'Admin' : 'User' %> <!-- Indicate user role -->
    </li>
  <% end %>
</ul>

<%= link_to 'Back to Dashboard', admin_dashboard_path %>
<%= link_to 'Back to Posts', posts_path %>
